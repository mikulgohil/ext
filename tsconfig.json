{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "extension.js"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
